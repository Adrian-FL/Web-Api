@model IEnumerable<Highscores.Data.Entities.Highscore>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Highscores</h1>

<div class="table-responsive">
    <table class="mt-3 table table-striped table-sm border border-dark">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GameId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Game.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Score)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Game.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Player.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
